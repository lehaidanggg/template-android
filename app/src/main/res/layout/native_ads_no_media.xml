<?xml version="1.0" encoding="utf-8"?>

<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_native_normal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/vHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:id="@+id/imgAds"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:importantForAccessibility="no" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/tvHeaderAds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title ads"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvContentAds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingEnd="8dp"
                        android:text="This is description of ads!"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/ad_call_to_action"
                style="@style/BaseTextView_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vHeader"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_btn_ad_normal"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:stateListAnimator="@null"
                android:text="install"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            style="@style/AppTheme.Ads"
            android:backgroundTint="#536DFE" />

    </RelativeLayout>
</com.google.android.gms.ads.nativead.NativeAdView>

